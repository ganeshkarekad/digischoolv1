{% extends 'base.html.twig' %}

{% block title %}Subject{% endblock %}

{% block body %}
    <h1>Subject</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ subject.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ subject.name }}</td>
            </tr>
            <tr>
                <th>PassMark</th>
                <td>{{ subject.passMark }}</td>
            </tr>
            <tr>
                <th>FinalMark</th>
                <td>{{ subject.finalMark }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ subject.author }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ subject.createdAt ? subject.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ subject.updatedAt ? subject.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ subject.deletedAt ? subject.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('subject_index') }}">back to list</a>

